<html>
	<head>
		<title>Cinefox</title>
		<link href="./css/normalize.css" type="text/css" rel="stylesheet">		
		<link href="./css/style.css" type="text/css" rel="stylesheet">
		<meta charset="utf-8"/>
	</head>
	<body>
		<div class="userbar">
			<p>Cinefox</p>
		</div>
	
		<h1>Finden von Kinos, Filmen und Spielzeiten</h1>
		
		<div class="kategorie">
			<h3>Kinos - Erweiterte Suche</h3>
			
			<div class="search">
				
				<form action="kinos" method="GET">
					<label for="kino">Kino:</label>
				    <input type="text" id="bezeichnung" name="bezeichnung"/></br>
					
					<label for="ort">Ort:</label>
					<input type="text" id="kinoOrt" name="ort"/></br>
					
					<label for="plz">PLZ:</label>
					<input type="text" id="plz" name="plz"/></br>
					
					<label for="bewertung">Bewertung:</label>
					<input type="text" id="bewertung" name="bewertung"/></br>
					
					<label for="kinotag[]">Kinotag:</label>
					<input type="checkbox" name="kinotag[]" value="mo">Montag 
					<input type="checkbox" name="kinotag[]" value="di">Dienstag<br>
					
					
				    <input type="submit" value="Submit" name="submit"/>
				</form>
			</div>
			
			<%
				if(kinos[0] !== undefined){
				%><ul>
					<%
						for(var i = 0; i < kinos.length; i++) {
							%><li><%= kinos[i].bezeichnung %></li><%
						}
					%>
				</ul><%
				}
			%>
		</div>
		<div class="kategorie">
		</div>
		<div class="kategorie">
		</div>		

		

	</body>
</html>